<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Kết nối SQL Server -->
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost;databaseName=yourdb</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password">password</property>
        <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
        
        <!-- Hiển thị câu SQL trên console -->
        <property name="hibernate.show_sql">true</property>
        
        <!-- Tạo bảng tự động (nếu cần) -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        Phải là false để Hibernate quản lý giao dịch.
        <property name="hibernate.connection.autocommit">false</property>
        Đảm bảo flush dữ liệu trước khi commit.
        <property name="hibernate.transaction.flush_before_completion">true</property>
        Đảm bảo session được đóng sau khi kết thúc transaction.
        <property name="hibernate.transaction.auto_close_session">true</property>

        
        <!-- Mapping Entity -->
        <mapping class="com.example.model.User"/>
    </session-factory>
</hibernate-configuration>
